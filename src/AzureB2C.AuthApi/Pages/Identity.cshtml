@page
@model IdentityModel
@{
    ViewData["Title"] = "Identity";
}
<h4>Claims</h4>
<table class="table table-bordered table-striped table-responsive">
    <thead>
    <tr>
        <th>Type</th>
        <th>Value</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var claim in this.User.Claims)
    {
        <tr>
            <td>@claim.Type</td>
            <td>@claim.Value</td>
        </tr>
    }
        <tr>
            <td>Company Admin</td>
            <td>@this.User.IsInRole(Constants.DelegatedUserManagementRoles.CompanyAdmin)</td>
        </tr>
        <tr>
            <td>Company User</td>
            <td>@this.User.IsInRole(Constants.DelegatedUserManagementRoles.CompanyUser)</td>
        </tr>
        <tr>
            <td>Global Admin</td>
            <td>@this.User.IsInRole(Constants.DelegatedUserManagementRoles.GlobalAdmin)</td>
        </tr>
    </tbody>
</table>